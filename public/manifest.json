{
  "manifest_version": 3,
  "name": "One Piece Everywhere",
  "description": "One Piece, I'm Monkey D. Luffy :)",
  "version": "1.0",
  "icons": {
    "16": "images/icons/luffy-16.png",
    "32": "images/icons/luffy-32.png",
    "48": "images/icons/luffy-48.png",
    "128": "images/icons/luffy-128.png"
  },
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "./index.html",
    "default_icon": {
      "16": "images/icons/luffy-16.png",
      "32": "images/icons/luffy-32.png",
      "48": "images/icons/luffy-48.png",
      "128": "images/icons/luffy-128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "content_scripts": [
    {
      "js": ["/scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/videos/*", "/images/injected/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
